<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/screen"
                android:text=""
                android:textSize="50sp"
                android:padding="5dp"
                android:textColor="@color/gray"
                android:hint="Enter formula"
                android:textColorHint="#919191"
                style="@style/result_window_style" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp">
                <TableRow android:gravity="center">
                    <androidx.appcompat.widget.AppCompatButton
                        android:text="(" android:id="@+id/btn_left"
                        style="@style/button_tool_style"/>
                    <Button
                        android:text=")" android:id="@+id/btn_right"
                        style="@style/button_tool_style"/>
                    <Button
                        android:text="C" android:id="@+id/btn_clear"
                        style="@style/button_tool_style"/>
                    <Button
                        android:text="/" android:id="@+id/btn_div"
                        style="@style/button_tool_style"/>
                </TableRow>
                <TableRow android:gravity="center">
                    <Button android:id="@+id/btn_7"
                        android:text="7"
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_8"
                        android:text="8"
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_9"
                        android:text="9"
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_mul"
                        android:text="x"
                        style="@style/button_tool_style"/>
                </TableRow>
                <TableRow android:gravity="center">
                    <Button android:id="@+id/btn_4"
                        android:text="4"
                        style="@style/button_style" />
                    <Button android:id="@+id/btn_5"
                        android:text="5"
                        style="@style/button_style" />
                    <Button android:id="@+id/btn_6"
                        android:text="6"
                        style="@style/button_style" />
                    <Button android:id="@+id/btn_minus"
                        android:text="-"
                        style="@style/button_tool_style"/>
                </TableRow>
                <TableRow android:gravity="center">
                    <Button android:id="@+id/btn_1"
                        android:text="1"
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_2"
                        android:text="2"
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_3"
                        android:text="3"
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_sum"
                        android:text="+"
                        style="@style/button_tool_style"/>
                </TableRow>
                <TableRow android:gravity="center">
                    <Button android:id="@+id/btn_0"
                        android:text="0"
                        style="@style/button_style"
                        android:layout_span="2"/>
                    <Button android:id="@+id/btn_dot"
                        android:text="."
                        style="@style/button_style"/>
                    <Button android:id="@+id/btn_result"
                        android:text="="
                        style="@style/button_tool_style"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>